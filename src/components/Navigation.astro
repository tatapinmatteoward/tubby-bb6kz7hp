---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/fan-art-showcase', label: 'Fan Art Showcase' },
  { href: '/collectible-database', label: 'Collectible Database' },
  { href: '/trivia-corner', label: 'Trivia Corner' },
  { href: '/club-rules', label: 'Club Rules' }
];
---

<nav class="bg-[#4b0082] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-[#ffa500]">Tubby Treasure Hub</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-[#ffa500] transition-colors duration-300 font-medium"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-[#ffa500] transition-colors duration-300 font-medium py-2 px-4 rounded-lg hover:bg-[#3a0063] transition-bg duration-300"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>