---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-discord', url: '#' }
];
---

<footer class="bg-purple-900 text-orange-300 py-8 relative overflow-hidden">
  <!-- Geometric background elements -->
  <div class="absolute top-0 left-0 w-full h-full">
    <div class="absolute top-10 left-10 w-24 h-24 border-4 border-orange-400 transform rotate-45"></div>
    <div class="absolute bottom-20 right-20 w-16 h-16 border-4 border-orange-400 transform -rotate-45"></div>
    <div class="absolute top-1/3 right-1/4 w-20 h-20 border-4 border-orange-400 transform rotate-12"></div>
  </div>
  
  <div class="container mx-auto px-4 text-center relative z-10">
    <p class="text-lg font-bold mb-4">Tubby Treasure Hub</p>
    <p class="text-orange-200 mb-6">&copy; {currentYear} Tubby Treasure Hub. All rights reserved.</p>
    
    <div class="flex justify-center gap-6 mb-6">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-orange-300 hover:text-orange-100 transition-colors duration-300 text-2xl"
          aria-label={`Visit our ${link.icon.split(' ')[2].replace('fa-', '')} page`}
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="border-t border-orange-600 pt-4">
      <p class="text-orange-400 text-sm">
        Made with <span class="text-orange-300">âœ¨</span> and <span class="text-orange-300">ğŸ</span>
      </p>
    </div>
  </div>
</footer>