---
import Layout from '../layouts/Layout.astro';

const featuredArt = [
  {
    id: 1,
    title: "Tinky Winky's Geometric Adventure",
    artist: "@TubbyArtist123",
    description: "A bold, purple-hued digital art featuring Tinky Winky exploring a whimsical landscape of shapes and colors.",
    quote: "Eh-oh! Pure inspiration!",
    color: "bg-purple-500"
  },
  {
    id: 2,
    title: "Dipsy's Hat Collection",
    artist: "@DipsyFan42",
    description: "An intricate geometric interpretation of Dipsy's signature hat, rendered in vibrant blues and yellows.",
    quote: "So stylish, so tubby!",
    color: "bg-blue-500"
  },
  {
    id: 3,
    title: "Laa-Laa's Rainbow Dance",
    artist: "@LaaLaaLover",
    description: "A whimsical dance scene featuring Laa-Laa with geometric rainbow patterns and joyful expressions.",
    quote: "So happy and bright!",
    color: "bg-yellow-400"
  },
  {
    id: 4,
    title: "Po's Cosmic Journey",
    artist: "@PoExplorer",
    description: "A celestial adventure where Po travels through geometric star fields and cosmic shapes.",
    quote: "Out of this world!",
    color: "bg-pink-500"
  }
];

const artCategories = [
  { name: "Digital Art", icon: "fas fa-digital-tachograph" },
  { name: "Sketches", icon: "fas fa-pencil-alt" },
  { name: "Crafts", icon: "fas fa-scissors" },
  { name: "Collages", icon: "fas fa-images" }
];

const featuredArtists = [
  { name: "TubbyArtist123", followers: "1.2K", avatar: "bg-purple-500" },
  { name: "DipsyFan42", followers: "890", avatar: "bg-blue-500" },
  { name: "LaaLaaLover", followers: "1.5K", avatar: "bg-yellow-400" },
  { name: "PoExplorer", followers: "750", avatar: "bg-pink-500" }
];
---

<Layout title="Fan Art Showcase" description="Dive into the whimsical world of Teletubbies fan art on our vibrant showcase page, where fans share their creative interpretations of Tinky Winky, Dipsy, Laa-Laa, and Po in geometric, joyful designs.">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-purple-600 via-purple-700 to-indigo-800 py-20">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-10 left-10 w-64 h-64 bg-yellow-400 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
      <div class="absolute top-40 right-10 w-72 h-72 bg-orange-400 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-10 left-1/2 w-64 h-64 bg-pink-400 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 drop-shadow-lg">
        Fan Art Showcase
      </h1>
      <p class="text-xl md:text-2xl text-yellow-200 max-w-3xl mx-auto mb-10">
        Discover the Joyful World of Teletubbies with Fellow Fans
      </p>
      <div class="flex justify-center">
        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-8 py-4 inline-flex items-center">
          <i class="fas fa-paint-brush text-yellow-300 mr-3 text-xl"></i>
          <span class="text-white font-semibold">Unleash Your Tubby Imagination!</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Introduction Section -->
  <section class="py-16 bg-gradient-to-b from-white to-purple-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-6">
          Welcome to the <span class="text-orange-500">Tubby Treasure Hub</span>!
        </h2>
        <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border-4 border-purple-200">
          <p class="text-lg text-gray-700 mb-4">
            Dive into the whimsical world of Teletubbies fan art on our vibrant showcase page, 
            where fans share their creative interpretations of Tinky Winky, Dipsy, Laa-Laa, and Po 
            in geometric, joyful designs.
          </p>
          <p class="text-lg text-gray-700">
            Whether it's colorful sketches, digital illustrations, or crafty interpretations, 
            this is your spot to discover and celebrate the magic.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Art Gallery -->
  <section class="py-16 bg-gradient-to-b from-purple-50 to-indigo-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-4">
          Featured Fan Creations
        </h2>
        <div class="w-24 h-1 bg-orange-500 mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredArt.map((art) => (
          <div 
            class="bg-white rounded-2xl shadow-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl border-4 border-white"
            key={art.id}
          >
            <div class={`${art.color} h-48 flex items-center justify-center`}>
              <div class="bg-white bg-opacity-30 backdrop-blur-sm rounded-full w-24 h-24 flex items-center justify-center">
                <i class="fas fa-paint-brush text-white text-4xl"></i>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-purple-800 mb-2">{art.title}</h3>
              <p class="text-gray-600 mb-3">by {art.artist}</p>
              <p class="text-gray-700 mb-4">{art.description}</p>
              <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4 rounded">
                <p class="text-yellow-700 italic">"{art.quote}"</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-gradient-to-b from-indigo-50 to-purple-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-4">
          Explore Our Art Categories
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Browse through different styles and techniques that bring our Teletubbies friends to life
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {artCategories.map((category, index) => (
          <div 
            class="bg-white p-6 rounded-2xl shadow-lg text-center transform transition-all duration-300 hover:scale-105 hover:shadow-xl border-2 border-purple-200"
            key={index}
          >
            <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class={`${category.icon} text-purple-600 text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-purple-800">{category.name}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Artists Spotlight -->
  <section class="py-16 bg-gradient-to-b from-purple-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-4">
          Featured Artists
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Meet the talented creators behind the most inspiring fan art
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredArtists.map((artist, index) => (
          <div 
            class="bg-white rounded-2xl shadow-xl p-6 text-center border-4 border-white transform transition-all duration-300 hover:scale-105 hover:shadow-2xl"
            key={index}
          >
            <div class={`${artist.avatar} w-24 h-24 rounded-full mx-auto flex items-center justify-center mb-4`}>
              <i class="fas fa-user text-white text-3xl"></i>
            </div>
            <h3 class="text-xl font-bold text-purple-800 mb-2">{artist.name}</h3>
            <p class="text-gray-600 mb-4">{artist.followers} followers</p>
            <button class="bg-gradient-to-r from-purple-500 to-orange-500 text-white px-6 py-2 rounded-full font-semibold hover:from-purple-600 hover:to-orange-600 transition-all duration-300 transform hover:scale-105">
              Follow
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-purple-600 to-indigo-700">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Share Your Art?
      </h2>
      <p class="text-xl text-purple-100 max-w-2xl mx-auto mb-10">
        Join our community of tubby artists and showcase your incredible creations!
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-purple-700 px-8 py-4 rounded-full font-bold text-lg hover:bg-purple-50 transition-all duration-300 transform hover:scale-105">
          Submit Your Art
        </button>
        <button class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-purple-700 transition-all duration-300 transform hover:scale-105">
          View Gallery
        </button>
      </div>
    </div>
  </section>

  <style>
    @keyframes blob {
      0% {
        transform: translate(0px, 0px) scale(1);
      }
      33% {
        transform: translate(30px, -50px) scale(1.1);
      }
      66% {
        transform: translate(-20px, 20px) scale(0.9);
      }
      100% {
        transform: translate(0px, 0px) scale(1);
      }
    }
    .animate-blob {
      animation: blob 15s infinite;
    }
    .animation-delay-2000 {
      animation-delay: 2s;
    }
    .animation-delay-4000 {
      animation-delay: 4s;
    }
  </style>
</Layout>