---
import Layout from '../layouts/Layout.astro';

const upcomingEvents = [
  {
    id: 1,
    title: "Teletubbies Tea Party Extravaganza",
    date: "Saturday, October 15th, 2023",
    time: "2:00 PM - 5:00 PM EST",
    location: "Virtual via Zoom",
    description: "Join us for a delightful virtual tea party where we'll sip on custardy treats (virtually, of course!), share fan art, and discuss our favorite episodes. Dress in your tubbiest hat and come ready for games like 'Pin the Annoying Thing' and 'Tubby Trivia'!",
    color: "bg-pink-200"
  },
  {
    id: 2,
    title: "Tubby Treasure Hunt Adventure",
    date: "Sunday, October 22nd, 2023",
    time: "11:00 AM - 1:00 PM EST",
    location: "Virtual via Discord",
    description: "Embark on a magical journey through Teletubbies land! Solve clues, find hidden treasures, and discover the secret locations of Tinky Winky's favorite spots. Team up with friends for the ultimate tubby challenge!",
    color: "bg-blue-200"
  },
  {
    id: 3,
    title: "Po's Picnic & Playdate",
    date: "Saturday, October 28th, 2023",
    time: "3:00 PM - 6:00 PM EST",
    location: "Virtual via Zoom",
    description: "Come to Po's cozy picnic where we'll share favorite snacks (and maybe some Tinky Winky's toys!) while playing fun games and creating our own tubby stories. All ages welcome!",
    color: "bg-yellow-200"
  },
  {
    id: 4,
    title: "Dipsy's Dance-Off Extravaganza",
    date: "Sunday, November 5th, 2023",
    time: "2:00 PM - 4:00 PM EST",
    location: "Virtual via Discord",
    description: "Get ready to boogie with Dipsy! Join our weekly dance-off where we'll showcase our best tubby moves and celebrate the rhythm of Teletubbyland. Submissions encouraged!",
    color: "bg-green-200"
  }
];

const highlights = [
  {
    title: "Virtual Watch Parties",
    description: "Join us for live streaming of your favorite Teletubbies episodes with fellow fans",
    icon: "fas fa-tv"
  },
  {
    title: "Fan Art Showcase",
    description: "Showcase your artistic talents and see what other tubby lovers have created",
    icon: "fas fa-paint-brush"
  },
  {
    title: "Community Talks",
    description: "Connect with fellow fans in discussion groups about Teletubbies lore and memories",
    icon: "fas fa-comments"
  }
];
---

<Layout title="Upcoming Events at Teletubby Troupe Central" description="Discover fun-filled Teletubbies-themed events, from virtual watch parties to fan meetups, all in our whimsical world! Join the tubby fun and connect with fellow fans.">
  <div class="min-h-screen bg-gradient-to-b from-pink-50 to-blue-50">
    
    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute top-0 left-0 w-1/3 h-full bg-pink-100 rounded-r-full"></div>
        <div class="absolute top-0 right-0 w-1/3 h-full bg-blue-100 rounded-l-full"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 text-primary">
            Upcoming Events
          </h1>
          <p class="text-xl md:text-2xl text-accent font-semibold mb-8">
            At Teletubby Troupe Central
          </p>
          <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-3xl p-6 md:p-8 shadow-xl border-4 border-pink-200">
            <p class="text-lg md:text-xl text-gray-700">
              Discover fun-filled Teletubbies-themed events, from virtual watch parties to fan meetups, all in our whimsical world!
            </p>
            <p class="text-lg md:text-xl text-gray-700 mt-4">
              Join the tubby fun and connect with fellow fans.
            </p>
          </div>
        </div>
      </div>
      
      <div class="absolute bottom-0 left-0 w-full h-16 bg-gradient-to-t from-pink-50 to-transparent"></div>
    </section>

    <!-- Highlights Section -->
    <section class="py-16 bg-gradient-to-r from-pink-100 to-blue-100">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-primary">
          Join the Tubby Fun!
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {highlights.map((highlight, index) => (
            <div 
              key={index} 
              class="bg-white rounded-3xl p-8 shadow-xl transform hover:scale-105 transition-all duration-300 border-4 border-accent"
            >
              <div class="w-16 h-16 rounded-full bg-pink-200 flex items-center justify-center mb-6">
                <i class={`${highlight.icon} text-3xl text-primary`}></i>
              </div>
              <h3 class="text-2xl font-bold mb-4 text-gray-800">{highlight.title}</h3>
              <p class="text-gray-600">{highlight.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Events Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-primary">
          <i class="fas fa-calendar-alt mr-4"></i>Highlighted Upcoming Events
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          {upcomingEvents.map((event) => (
            <div 
              key={event.id} 
              class={`${event.color} rounded-3xl overflow-hidden shadow-xl transform hover:scale-[1.02] transition-all duration-300 border-4 border-white`}
            >
              <div class="p-8">
                <div class="flex justify-between items-start mb-6">
                  <h3 class="text-2xl font-bold text-gray-800">{event.title}</h3>
                  <div class="text-primary font-bold bg-white bg-opacity-70 px-3 py-1 rounded-full">
                    {event.date}
                  </div>
                </div>
                
                <div class="flex items-center text-gray-700 mb-4">
                  <i class="fas fa-clock mr-2"></i>
                  <span>{event.time}</span>
                </div>
                
                <div class="flex items-center text-gray-700 mb-6">
                  <i class="fas fa-location-dot mr-2"></i>
                  <span>{event.location}</span>
                </div>
                
                <p class="text-gray-700 mb-6">{event.description}</p>
                
                <button class="w-full bg-primary hover:bg-pink-600 text-white font-bold py-3 px-6 rounded-full transition-colors duration-300 transform hover:scale-105">
                  Join Event
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-pink-200 to-blue-200">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center bg-white bg-opacity-80 rounded-3xl p-10 shadow-xl border-4 border-accent">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-primary">
            Ready to Join the Fun?
          </h2>
          <p class="text-xl mb-8 text-gray-700">
            Become a member of our vibrant Teletubby community and never miss an event!
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="bg-primary hover:bg-pink-600 text-white font-bold py-3 px-8 rounded-full transition-colors duration-300 transform hover:scale-105">
              Sign Up Now
            </button>
            <button class="bg-accent hover:bg-green-400 text-gray-800 font-bold py-3 px-8 rounded-full transition-colors duration-300 transform hover:scale-105 border-2 border-white">
              Learn More
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-10 bg-pink-100 border-t-4 border-accent">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-700 mb-2">
          <i class="fas fa-heart text-primary mr-2"></i>Your Ultimate Teletubbies Fan Hub!
        </p>
        <p class="text-gray-600">Â© {new Date().getFullYear()} Teletubby Troupe Central. All rights reserved.</p>
      </div>
    </footer>
  </div>
</Layout>