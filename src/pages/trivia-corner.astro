---
import Layout from '../layouts/Layout.astro';

const triviaFacts = [
  {
    title: "Tinky Winky's Handbag",
    description: "The purple Teletubby carries a red handbag that's become an iconic symbol of fun and fashion in Teletubby Land. It's as big as his personality!"
  },
  {
    title: "Dipsy's Hat",
    description: "Green Dipsy loves his black-and-white striped hat, which he wears with pride. Fun fact: It's inspired by real-world striped patterns for that vibrant, geometric flair."
  },
  {
    title: "Laa-Laa's Ball",
    description: "The yellow sunshine Laa-Laa loves her red ball more than anything. It's her favorite toy for rolling and playing in the sunshine."
  },
  {
    title: "Po's House",
    description: "Po's cozy little house is the perfect place for a nap and enjoying a delicious custard. It's designed with rounded corners and bright colors!"
  }
];

const quizzes = [
  {
    question: "What color is Tinky Winky?",
    options: ["Blue", "Purple", "Green", "Yellow"],
    answer: 1
  },
  {
    question: "Which Teletubby loves stripes?",
    options: ["Dipsy", "Laa-Laa", "Po", "Tinky Winky"],
    answer: 0
  },
  {
    question: "What is Laa-Laa's favorite toy?",
    options: ["Ball", "Piano", "Spoon", "Custard"],
    answer: 0
  }
];

const title = "Trivia Corner: Teletubbies Fun Facts and Quizzes";
const description = "Step into the vibrant, whimsical world of Teletubbies trivia! Test your knowledge with fun facts, quirky quizzes, and delightful insights that celebrate the joyful adventures of Tinky Winky, Dipsy, Laa-Laa, and Po.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-orange-500 opacity-90"></div>
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-24 h-24 bg-yellow-400 rounded-full"></div>
      <div class="absolute top-40 right-20 w-16 h-16 bg-purple-500 rounded-full"></div>
      <div class="absolute bottom-20 left-1/4 w-20 h-20 bg-orange-400 rounded-full"></div>
      <div class="absolute bottom-40 right-1/3 w-12 h-12 bg-green-400 rounded-full"></div>
    </div>
    <div class="relative container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Trivia Corner: 
          <span class="block">Teletubbies Fun Facts and Quizzes</span>
        </h1>
        <p class="text-xl text-orange-100 mb-8 max-w-2xl">
          Step into the vibrant, whimsical world of Teletubbies trivia! Test your knowledge with fun facts, quirky quizzes, and delightful insights that celebrate the joyful adventures of Tinky Winky, Dipsy, Laa-Laa, and Po.
        </p>
        <div class="flex flex-wrap gap-4">
          <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-6 py-3 text-white font-semibold">
            <i class="fas fa-star mr-2"></i> Fun Facts
          </div>
          <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-6 py-3 text-white font-semibold">
            <i class="fas fa-question-circle mr-2"></i> Quizzes
          </div>
          <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-6 py-3 text-white font-semibold">
            <i class="fas fa-rocket mr-2"></i> Joyful Adventures
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Introduction Section -->
  <section class="py-16 bg-gradient-to-b from-white to-purple-50">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <div class="md:w-1/2">
          <div class="relative">
            <div class="bg-orange-400 rounded-2xl w-64 h-64 md:w-80 md:h-80 mx-auto flex items-center justify-center shadow-xl">
              <div class="bg-white w-48 h-48 md:w-60 md:h-60 rounded-full flex items-center justify-center">
                <div class="bg-purple-600 rounded-full w-32 h-32 md:w-40 md:h-40 flex items-center justify-center">
                  <i class="fas fa-hand-holding-heart text-5xl text-orange-400"></i>
                </div>
              </div>
            </div>
            <div class="absolute -top-4 -right-4 bg-yellow-400 w-16 h-16 rounded-full flex items-center justify-center shadow-lg">
              <i class="fas fa-candy-cane text-2xl text-purple-700"></i>
            </div>
            <div class="absolute -bottom-4 -left-4 bg-green-400 w-12 h-12 rounded-full flex items-center justify-center shadow-lg">
              <i class="fas fa-star text-lg text-purple-700"></i>
            </div>
          </div>
        </div>
        <div class="md:w-1/2">
          <h2 class="text-3xl font-bold text-purple-800 mb-4">Welcome to the Trivia Corner!</h2>
          <p class="text-lg text-gray-700 mb-6">
            <span class="font-bold text-orange-500">Tubby tubby! Noo-noo!</span> Dive into the colorful, geometric wonderland of Teletubbies with our handpicked trivia. 
          </p>
          <p class="text-lg text-gray-700 mb-6">
            Whether you're a longtime fan or new to Teletubby Land, these <span class="font-bold text-purple-700">fun facts</span> and <span class="font-bold text-orange-500">quizzes</span> will spark joy and giggles. 
          </p>
          <p class="text-lg text-gray-700">
            Grab your custard and let's play!
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Secrets Section -->
  <section class="py-16 bg-gradient-to-b from-purple-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-purple-800 mb-4">Did You Know? Teletubbies Secrets</h2>
        <div class="w-24 h-1 bg-orange-500 mx-auto rounded-full"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {triviaFacts.map((fact, index) => (
          <div 
            key={index} 
            class="bg-white rounded-2xl shadow-xl overflow-hidden transform transition-transform hover:scale-105 duration-300 border-4 border-purple-200"
          >
            <div class="h-2 bg-gradient-to-r from-purple-500 to-orange-400"></div>
            <div class="p-6">
              <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center mb-4">
                <i class={`fas fa-${index === 0 ? 'handbag' : index === 1 ? 'hat-cowboy' : index === 2 ? 'ball' : 'home'} text-purple-600 text-xl`}></i>
              </div>
              <h3 class="text-xl font-bold text-purple-800 mb-2">{fact.title}</h3>
              <p class="text-gray-600">{fact.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quiz Section -->
  <section class="py-16 bg-gradient-to-b from-orange-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-orange-700 mb-4">Teletubbies Trivia Quiz</h2>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          Test your knowledge with these fun quiz questions about your favorite Teletubbies!
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        {quizzes.map((quiz, index) => (
          <div key={index} class="mb-12 bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="p-6 md:p-8">
              <div class="flex items-start mb-4">
                <div class="bg-orange-100 text-orange-700 rounded-full w-10 h-10 flex items-center justify-center mr-4 flex-shrink-0">
                  {index + 1}
                </div>
                <h3 class="text-xl font-bold text-purple-800">{quiz.question}</h3>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
                {quiz.options.map((option, optionIndex) => (
                  <button 
                    key={optionIndex} 
                    class="text-left p-4 rounded-xl border-2 border-purple-200 hover:border-orange-400 hover:bg-orange-50 transition-colors duration-200"
                  >
                    <div class="flex items-center">
                      <div class="w-6 h-6 rounded-full border-2 border-purple-400 flex items-center justify-center mr-3">
                        <div class="w-3 h-3 rounded-full bg-purple-400 opacity-0"></div>
                      </div>
                      <span>{option}</span>
                    </div>
                  </button>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <button class="bg-gradient-to-r from-purple-600 to-orange-500 text-white font-bold py-4 px-8 rounded-full text-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
          <i class="fas fa-check-circle mr-2"></i> Submit Answers
        </button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-purple-600 to-orange-500">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready for More Teletubbies Fun?</h2>
      <p class="text-xl text-orange-100 max-w-2xl mx-auto mb-8">
        Join our community of Teletubbies fans and discover even more delightful secrets!
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-purple-700 font-bold py-3 px-8 rounded-full text-lg hover:bg-purple-50 transition-colors duration-300">
          <i class="fas fa-heart mr-2"></i> Join Community
        </button>
        <button class="bg-transparent border-2 border-white text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-white hover:text-purple-700 transition-colors duration-300">
          <i class="fas fa-star mr-2"></i> Explore More
        </button>
      </div>
    </div>
  </section>

  <!-- Footer Info -->
  <footer class="py-12 bg-purple-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <p class="text-lg mb-4">Discover the Joyful World of Teletubbies with Fellow Fans</p>
      <div class="flex justify-center space-x-6">
        <a href="#" class="text-orange-300 hover:text-white transition-colors duration-300">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="text-orange-300 hover:text-white transition-colors duration-300">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="text-orange-300 hover:text-white transition-colors duration-300">
          <i class="fab fa-instagram"></i>
        </a>
      </div>
      <p class="mt-8 text-purple-300">Â© 2023 Tubby Treasure Hub. All rights reserved.</p>
    </div>
  </footer>
</Layout>