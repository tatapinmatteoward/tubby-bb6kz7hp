import Layout from '../layouts/Layout.astro';

const features = [
  { 
    icon: 'fas fa-paint-brush', 
    title: 'Exclusive Fan Art Gallery', 
    description: 'Browse stunning, member-submitted artwork inspired by the Teletubbies\' colorful adventures. From pastel sketches of Baby Sun to vibrant scenes in Teletubbyland'
  },
  { 
    icon: 'fas fa-video', 
    title: 'Behind-the-Scenes Content', 
    description: 'Access exclusive videos, interviews, and never-before-seen moments from the Teletubbies universe'
  },
  { 
    icon: 'fas fa-gift', 
    title: 'Special Member Perks', 
    description: 'Get early access to new merchandise, exclusive collectibles, and special discounts on Teletubby products'
  },
  { 
    icon: 'fas fa-users', 
    title: 'Community Forums', 
    description: 'Connect with fellow Teletubbies enthusiasts in our vibrant, moderated online community'
  }
