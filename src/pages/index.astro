---
import Layout from '../layouts/Layout.astro';

const features = [
  {
    icon: 'fas fa-star',
    title: 'Share Your Treasures',
    text: 'Post photos of your rare Tubby toys, fan art, or epic costume recreations.'
  },
  {
    icon: 'fas fa-users',
    title: 'Connect with Fans',
    text: 'Chat in cozy forums, swap stories from your childhood binge-watches, and make new friends who *get* the magic.'
  },
  {
    icon: 'fas fa-book',
    title: 'Explore Endless Content',
    text: 'Dive into articles on Teletubbies episodes, behind-the-scenes lore, and fun DIY projects to bring the Teletubby spirit home.'
  }
];

const testimonials = [
  {
    name: 'Tinky Winky',
    quote: 'The best place to share my giggles! üåü'
  },
  {
    name: 'Dipsy',
    quote: 'My favorite place to dance! üéµ'
  },
  {
    name: 'Laa-Laa',
    quote: 'So much joy and friendship here! üíï'
  }
];

const title = "Welcome to Tubby Treasure Hub";
const description = "Join fellow fans in exploring the whimsical world of Teletubbies. Share stories, collectibles, and joyful memories in our vibrant community hub.";
---

<Layout title={title} description={description}>
  {/* Hero Section */}
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-600 via-purple-700 to-orange-500"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgdmlld0JveD0iMCAwIDYwIDYwIj48Y2lyY2xlIGN4PSIzMCIgY3k9IjMwIiByPSIxIiBmaWxsPSIjZmZmIiBvcGFjaXR5PSIwLjA1Ii8+PC9zdmc+')] opacity-20"></div>
    
    <div class="relative container mx-auto px-4 py-24 md:py-32">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-block p-2 bg-white bg-opacity-20 rounded-full mb-6 backdrop-blur-sm">
          <i class="fas fa-dancing text-3xl text-white"></i>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Welcome to <span class="text-orange-300">Tubby Treasure Hub</span>
        </h1>
        <p class="text-xl md:text-2xl text-purple-100 mb-10 max-w-2xl mx-auto">
          Discover the Joyful World of Teletubbies with Fellow Fans
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            Join the Tribe
          </button>
          <button class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 backdrop-blur-sm border border-white border-opacity-30">
            Explore More
          </button>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
  </div>

  {/* Features Section */}
  <section class="py-16 bg-gradient-to-b from-white to-purple-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-900 mb-4">
          Why Join Our <span class="text-orange-500">Tubby Tribe</span>?
        </h2>
        <div class="w-24 h-1 bg-orange-500 mx-auto rounded-full"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div 
            key={index}
            class="bg-white rounded-2xl p-8 shadow-xl transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl border-4 border-transparent hover:border-orange-300"
          >
            <div class="w-16 h-16 rounded-full bg-purple-100 flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-2xl text-purple-700`}></i>
            </div>
            <h3 class="text-2xl font-bold text-purple-900 mb-4">{feature.title}</h3>
            <p class="text-purple-700 text-lg">{feature.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Content Section */}
  <section class="py-16 bg-purple-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12">
          <div class="flex items-center mb-8">
            <div class="w-12 h-12 rounded-full bg-gradient-to-r from-purple-500 to-orange-500 flex items-center justify-center mr-4">
              <i class="fas fa-dove text-white"></i>
            </div>
            <h2 class="text-3xl font-bold text-purple-900">Step into a <span class="text-orange-500">Vibrant Geometric Paradise</span></h2>
          </div>
          
          <div class="prose prose-lg max-w-none text-purple-800">
            <p class="text-xl mb-6">
              Where the sun rises with a baby's giggle, and Tinky Winky, Dipsy, Laa-Laa, and Po dance through endless meadows of fun!
            </p>
            
            <p class="mb-6">
              At <strong>Tubby Treasure Hub</strong>, we're all about celebrating the colorful chaos and heartwarming hugs of the Teletubbies universe. 
              Whether you're a longtime fan or discovering these delightful characters for the first time, our community is your gateway to joy.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-10">
              <div class="bg-gradient-to-r from-purple-500 to-purple-700 rounded-2xl p-6 text-white">
                <h3 class="text-xl font-bold mb-2">Rare Collectibles</h3>
                <p>Share your limited edition toys and discover new treasures from collectors worldwide.</p>
              </div>
              <div class="bg-gradient-to-r from-orange-400 to-orange-600 rounded-2xl p-6 text-white">
                <h3 class="text-xl font-bold mb-2">Fan Art Showcase</h3>
                <p>Display your creativity and inspire others with your Teletubbies-inspired masterpieces.</p>
              </div>
            </div>
            
            <p class="mb-6">
              Join our vibrant community where every member is a treasure, every post is an adventure, and every friend is a hug away. 
              Share your stories, create new memories, and experience the pure magic that only Teletubbies can bring!
            </p>
            
            <div class="flex justify-center my-10">
              <div class="relative">
                <div class="absolute -inset-4 bg-orange-400 rounded-full opacity-20 animate-pulse"></div>
                <div class="relative bg-gradient-to-r from-purple-600 to-orange-500 text-white text-xl font-bold py-4 px-8 rounded-full">
                  üí´ Join Our Community Today! üí´
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Testimonials */}
  <section class="py-16 bg-gradient-to-b from-purple-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-900 mb-4">
          What Our <span class="text-orange-500">Tubby Treasures</span> Say
        </h2>
        <div class="w-24 h-1 bg-orange-500 mx-auto rounded-full"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index}
            class="bg-white rounded-2xl p-8 shadow-lg transform transition-all duration-300 hover:scale-105"
          >
            <div class="text-orange-500 text-4xl mb-4">‚ùù</div>
            <p class="text-purple-800 text-lg mb-6 italic">"{testimonial.quote}"</p>
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-full bg-gradient-to-r from-purple-500 to-orange-500 flex items-center justify-center mr-4">
                <i class={`fas fa-${index === 0 ? 'star' : index === 1 ? 'gift' : 'heart'} text-white`}></i>
              </div>
              <div>
                <h4 class="font-bold text-purple-900">{testimonial.name}</h4>
                <p class="text-purple-600">Tubby Community Member</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Call to Action */}
  <section class="py-20 bg-gradient-to-r from-purple-700 to-orange-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        Ready to Join the Adventure?
      </h2>
      <p class="text-xl text-purple-100 mb-10 max-w-2xl mx-auto">
        Discover your next favorite Teletubbies memory, connect with friends, and become part of our vibrant community!
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-purple-900 hover:bg-purple-100 font-bold py-4 px-10 rounded-full text-xl transition-all duration-300 transform hover:scale-105 shadow-xl">
          Create Your Account
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-purple-900 font-bold py-4 px-10 rounded-full text-xl transition-all duration-300">
          Browse Community
        </button>
      </div>
    </div>
  </section>
</Layout>